{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++ - g++",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\Main.exe"
            ],
            "options": {
                "cwd": ""
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}